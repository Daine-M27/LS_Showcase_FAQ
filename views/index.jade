extends layout

block content
  #contents    
    p.strong Whats New at The Light Source
    
    .slideshow-container      
      for slide in allSlides.slides         
        .mySlides.fade        
          //.numbertext= i+"/"+allSlides.slides.length
          div.img-container
            img(src=slide.imgSrc).w100
            div.text-container
              .text=slide.text
              div.link-container
                a(class='button' href=slide.url) More Info      
      #dot-container.text-center      
        each slide, val in allSlides.slides
          span.dot(onclick="currentSlide("+(val+1)+")")    
    br
    .faq-title
      h4 Frequently Asked Questions
    .faq-search      
      input(id="searchText" type="text" placeholder="Keyword Search...")
      button.search-button(onclick="searchFAQ()") Search
      button.reset-button(onclick="resetAll()") Reset
    br
    .accordion-container    
      for question in questions.faq
        button.accordion= question.Question
        .panel
          p= question.Answer

          